<%- include("partials/header") %>

<div class="container d-flex justify-content-center">
    <div class="card mt-4" style="width: 50%;">
        <div class="card-body ">
            <h3 class="card-title">Edit <%= blog.title %></h3>
            <!-- <form action="/blogs/:<%=blog._id%>" method="PUT"> -->
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="" class="mt">
                        <h6>Title</h6>
                    </label>
                    <input type="text" name="blog[title]" class="form-control" id="title" value="<%= blog.title %>"
                        required>
                    <label for="" class="mt-4">
                        <h6>Image URL</h6>
                    </label>
                    <input type="text" name="blog[image]" class="form-control" id="image" value="<%= blog.image %>">
                    <label for="" class="mt-4">
                        <h6>Blog Content</h6>
                    </label>
                    <textarea type="text" name="blog[body]" class="form-control" id="body"
                        required><%=blog.body%></textarea>
                    <!-- <input type="submit" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"> -->
                    <button type="submit" class="btn btn-outline-success mt-4">Submit</button>
                </div>
            </form>
        </div>
    </div>

</div>


<%- include("partials/footer") %>