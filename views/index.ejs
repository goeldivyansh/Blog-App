<%- include("partials/header") %>

<div class="container">
    <h1 class="mt-3">RESTful Blog App</h1>

    <% blogs.forEach(function(blog){ %>
    <div class="">
        <hr class="mt-4" style="border-bottom: 1px solid #ccc; background: #999;">
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>" lt="image"  height="300px" width="40%" style="border: solid 2px #f0f1f2; min-width: 250px;">
        <div><%= blog.created.toDateString() %></div>
        <p><%= blog.body.substring(0,90) %>... </p>
        <a href="/blogs/<%= blog._id %>" class="btn btn-outline-primary">Read More <strong> -&gt;</strong></a>
      
    </div>
    <% }); %>
</div>
<%- include("partials/footer") %>